<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720" prefWidth="1080"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="frontend.gui.MainController">

	<!-- Create the menu bar -->
	<top>
		<MenuBar>
			<menus>
				<Menu mnemonicParsing="false" text="Open">
					<items>
						<Menu mnemonicParsing="false" text="Open Directory">
							<items>
								<MenuItem mnemonicParsing="false" onAction="#openDirectory"
									text="Open Directory" />
								<MenuItem mnemonicParsing="false" onAction="#openDirectryRecursively"
									text="Open Directory Recursivley" />
							</items>
						</Menu>
						<MenuItem mnemonicParsing="false" onAction="#openLog"
							text="Open Log" />
					</items>
				</Menu>
				<Menu mnemonicParsing="flase" text="Manage Tags">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#manageTags"
							text="Manage Tags" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Save">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#save" text="Save" accelerator="Shortcut+S"/>
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Undo">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#undo" text="Undo" accelerator="Shortcut+Z"/>
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Redo">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#redo" text="Redo" accelerator="Shortcut+shift+Z"/>
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<SplitPane dividerPositions="0.21706864564007422"
			BorderPane.alignment="CENTER">
			<items>
				<AnchorPane>
					<ListView AnchorPane.topAnchor="0.0"
						AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
						AnchorPane.rightAnchor="0.0" />
				</AnchorPane>
				<AnchorPane />
			</items>
		</SplitPane>
	</center>

</BorderPane>
